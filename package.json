{
  "name": "dmx-chat",
  "version": "2.6.0",
  "description": "Full-stack chat application like Discord",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "cd client && npm run build && cd ../server && npm run build",
    "start": "cd server && npm start",
    "electron": "electron .",
    "electron:dev": "npm run build && electron .",
    "dist": "npm run build && electron-builder --win && npm run build:stub",
    "build:stub": "if not exist stub-dist mkdir stub-dist && \"%LOCALAPPDATA%\\electron-builder\\Cache\\nsis\\nsis-3.0.4.1\\makensis.exe\" stub\\DMXGram-Downloader.nsi",
    "dist:zip": "npm run build && electron-builder --win --config.win.target=zip",
    "dist:nsis": "npm run build && electron-builder --win --config.win.target=nsis"
  },
  "keywords": [
    "chat",
    "discord",
    "messenger",
    "websocket"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "2.97.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "electron-updater": "^6.8.3",
    "express": "^4.22.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "resend": "^6.9.2",
    "socket.io": "^4.8.3",
    "stripe": "^17.7.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.1"
  },
  "build": {
    "appId": "com.dmxgram.app",
    "productName": "DMXGram",
    "icon": "client/public/logo.png",
    "asar": true,
    "asarUnpack": [
      "client/dist/**/*",
      "client/public/**/*"
    ],
    "npmRebuild": false,
    "publish": {
      "provider": "github",
      "owner": "prodorzech",
      "repo": "dmxgram",
      "releaseType": "release"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "server/dist/**/*",
      "client/dist/**/*",
      "client/public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "client/public/logo.png",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "signingHashAlgorithms": null,
      "sign": null
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DMXGram",
      "runAfterFinish": true
    }
  }
}
